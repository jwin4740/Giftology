<% layout('layout') -%>
  <div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6" style="margin-top: 30px;">
      <div class="card text-center add-card">
        <div class="card-body">
          <h3 class="add-header">Welcome Back!</h3>
          <!--<div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">Forgot password?</a></div>-->
        </div>

        <div style="padding:30px" class="panel-body">
          <% if (message && message.length > 0) { %>
            <div class="alert alert-danger col-sm-12">
              <%= message %>
            </div>
            <% } %>

              <form id="loginform" class="form-horizontal" role="form" method="post" action="/login" >

                <div style="margin-bottom: 25px" class="input-group">
                  <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                  </span>
                  <input id="login-email" type="email" class="form-control" name="email" value="" placeholder="email@example.com">
                </div>

                <div style="margin-bottom: 25px" class="input-group">
                  <span class="input-group-addon">
                    <i class="glyphicon glyphicon-lock"></i>
                  </span>
                  <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                </div>



                <div class="input-group">
                  <!--<div class="checkbox">
                                      <label>
                                        <input id="login-remember" type="checkbox" name="remember" value="1"> Remember me
                                      </label>
                                    </div>-->
                </div>


                <div style="margin-top:10px" class="form-group">
                  <!-- Button -->

                  <div class="col-sm-12 controls">
                    <button id="btn-login" type="submit" class="btn btn-info">Login </button>


                  </div>
                </div>


                <div class="form-group">
                  <div class="col-md-12 control">
                    <div style="border-top: 2px solid#343A3F; padding-top:15px; font-size:85%">
                      Don't have an account?
                      <a class="signupLink" href="/signup">
                        Sign Up Here
                      </a>
                    </div>
                  </div>
                </div>
              </form>



        </div>
      </div>
    </div>

  </div>