<% layout('layout') -%>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6" style="margin-top: 30px;">
            <div class="card text-center add-card">
                <div class="card-body">
                    <h3 class="add-header">Welcome to Giftology!</h3>
                    <form class="form-horizontal" role="form" method="post" action="/signup" onSubmit="return checkblank(this);">
                        <% if (message && message.length > 0) { %>
                            <div class="alert alert-danger col-sm-12">
                                <%= message %>
                            </div>
                            <% } %>
                                <div id="signupalert" style="display:none" class="alert alert-danger">
                                    <p>Error:</p>
                                    <span></span>
                                </div>

                                <div class="form-group">
                                    <label for="first_name" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" name="first_name" placeholder="First Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="last_name" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input type="text" class="form-control" name="last_name" placeholder="Last Name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input type="email" class="form-control" name="email" placeholder="Email">
                                    </div>
                                </div>

                                <div class="form-group">

                                    <label for="password" class="col-12 control-label"></label>
                                    <div class="col-12">
                                        <input type="password" class="form-control" name="password" placeholder="Password">

                                    </div>
                                </div>

                                <div class="form-group">
                                    <!-- Button -->
                                    <div class="col-12">
                                        <button id="btn-signup" type="submit" class="btn btn-info" style="margin-left: 50px;">
                                            <i class="icon-hand-right"></i>Sign Up</button>













                                        <!-- piece from original code???!-->
                                        <!-- <div class="panel-title">Sign Up</div> -->
                                        <div style="float:right; font-size: 85%; position: relative; top:-10px">
                                            <a id="signinlink" href="/">Log In</a>
                                        </div>








                                    </div>
                                </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>