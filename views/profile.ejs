<% layout('layout') -%>

<div class="row">
    <div class="col"></div>
    <div class="col-sm-9 col-md-6 col-lg-4" style="margin:30px;">
        <div class="card background-gifts" style="border:0; color: #ffffff;">
            <div class="card-body">
                <h3 style="color: #ffffff;">Your Profile</h3>
                <form class="form-horizontal" role="form">
                
                    <% if (message && message.length > 0) { %>
                        <div class="alert alert-danger col-sm-12">
                        <%= message %>
                        </div>
                        <% } %>
                            <div id="signupalert" style="display:none" class="alert alert-danger text-center">
                                <p>Error:</p>
                                <span></span>
                            </div>

                            <div class="form-group">
                                <label for="firstName" class="control-label">First Name</label>
                                <div class="col-12">
                                    <input id="firstName" type="text" class="form-control" name="firstName" value= "<%=  data.firstName %>" placeholder="First Name">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="lastName" class="control-label">Last Name</label>
                                <div class="col-12">
                                    <input id="lastName" type="text" class="form-control" name="lastName" value= "<%=  data.lastName %>" placeholder="Last Name">
                                </div>
                            </div>
                             <div class="form-group">
                                <label for="photoURL" class="control-label">Profile Photo URL</label>
                                <div class="col-12">
                                    <input id="lastName" type="text" class="form-control" name="photorURL" value= "<%=  data.photoURL %>" placeholder="Profile Photo URL">
                                </div>
                            </div>

                            <div class="form-group">
                                <!-- Button -->
                                <div class="col-md-offset-3 col-md-9">
                                    <button id="btn-updateProfile" class="btn btn-info">
                                        <i class="icon-hand-right"></i>Update Profile
                                    </button>
                                    
                                    <a href="/shopping" >Cancel</a>
                                    <!-- piece from original code???!-->
                                    <!-- <div class="panel-title">Sign Up</div> -->
                                </div>
                            </div>
            </div>
        </div>
        </form>
    </div>
    <div class="col"></div>
</div>

<script src="assets/javascript/profile.js" type="text/javascript"></script>